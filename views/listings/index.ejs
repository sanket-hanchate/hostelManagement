<% layout("/listings/boilerplate") %>

<body>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">

  <% for (let student of results) { %>
    <div class="col">
      <a href="/listings/<%= student._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 shadow">
          <img src="<%= student.image %>" class="card-img-top" alt="<%= student.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= student.name %></h5>
            <p class="card-text">
              <strong>Email:</strong> <%= student.email %><br>
              <strong>Phone:</strong> <%= student.phone %><br>
              <strong>Course:</strong> <%= student.course %> - <%= student.branch %><br>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<style>
/* Container and rows */
.row {
  margin-top: 20px;
}

/* Card styling */
.card {
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.3s, box-shadow 0.3s;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  cursor: pointer;
}

/* Card image */
.card-img-top {
  height: 250px;
  object-fit: cover;
}

/* Card body */
.card-body {
  padding: 15px;
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Card title */
.card-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 10px;
  color: #0d6efd;
}

/* Fee Status Badge */
.fee-status {
  display: inline-block;
  padding: 2px 8px;
  font-size: 0.8rem;
  border-radius: 12px;
  font-weight: bold;
  margin-top: 5px;
  color: white;
}

.fee-paid {
  background-color: #198754; /* green */
}

.fee-pending {
  background-color: #dc3545; /* red */
}

/* Fine styling */
.fine {
  font-weight: bold;
  color: #ff7b00;
}

/* Hover effects for links */
a.text-decoration-none:hover {
  text-decoration: none;
}

/* Responsive text */
@media (max-width: 768px) {
  .card-body p {
    font-size: 0.9rem;
  }
  .card-title {
    font-size: 1.2rem;
  }
}
</style>